{
  "main": "script.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watchTailwind": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "buildTailWind": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "serveVite": "vite --port 3000",
    "dev": "npm-run-all --parallel --race watchTailwind serveVite",
    "build": "tsc && vite build && npm run buildTailWind"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  },
  "dependencies": {
    "daisyui": "^2.50.0"
  }
}
